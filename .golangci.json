{
        "version": "2",
	"formatters": {
		"enable": [
			"goimports",
			"gofmt"
		]
	},
	"linters": {
		"disable-all": true,
		"enable": [
			"govet",
			"misspell",
			"ineffassign"
		],
            "disable": [
		"revive"
                ]
	},
	"linters-settings": {
	    "revive": {
                "rules": [
                    {
		    "name" : "exported",
		    "disabled": true
		    }
                ]
            },
            "comment": [
                "This next block doesn't suppress the comment-requirement for exported names",
                "so disable revive until it does."
                ]
	},
	"issues": {
		"exclude-rules": [
			{
				"linters": "revive",
				"text": "should have comment or be unexported"
			}
		],
		"exclude-dirs": [
			"pkg/generated"
		]
	}
}
